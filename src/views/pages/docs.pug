extends ../layouts/master.pug

include ../components/navigation
include ../components/docs-card
include ../components/tabs


block content 
  .docs-page 
    section.section.section--first 
      .container 
        +navigation(page='Документация')
    section.section
      .container 
        .docs-page__row 
          .docs-page__col
            +tabs(tabs = ['Оборудование', 'Инструменты'])
          .docs-page__col
            .docs-page__selects(data-select-parent='') 
              .docs-page__selects-item 
                .select-wrapper 
                  .select
                    select.select__mobile(name='cat-mob' data-select-mobile='') 
                      option(value="" selected disabled)
                        |Выберите категорию
                      each item in data.selectValues.cat
                        option(value=item)
                          |#{item} 
                    select.select__select(data-select-placeholder='Выберите категорию' style='width: 100%' data-select-control='')
                      option(value='' disabled selected)
                      each item in data.selectValues.cat
                        option(value=item)
                          |#{item} 
              .docs-page__selects-item 
                .select-wrapper 
                  .select.disabled(data-select-controlled='')
                    select.select__mobile(name='cat-mob') 
                      option(value="" selected disabled)
                        |Выберите бренд'
                      each item in data.selectValues.brand
                        option(value=item)
                          |#{item} 
                    select.select__select(data-select-placeholder='Выберите бренд' style='width: 100%')
                      option(value='' disabled selected)
                      each item in data.selectValues.brand
                        option(value=item)
                          |#{item} 
    section.section.section--sm
      .container 
        .docs-page__row 
          .docs-page__col
            h2.docs-page__title 
              |Токарные станки с ЧПУ
            .docs-page__text 
              |Общие документы
          .docs-page__col 
        .grid-container.margin-top.margin-top--md 
          - for (i = 0; i < 3; i++)
            +docs-card
    each item in ['Leadwell CNC machines mfg., corp.', 'Force One machinery', 'SFM', 'GSM', 'POLY GIM']
      section.section 
        .container
          .docs-page__row 
            .docs-page__col
              h2.docs-page__title 
                |Токарные станки с ЧПУ
              .docs-page__text 
                |Общие документы
            .docs-page__col   
              img.docs-page__image(src="assets/images/docs-1.jpg", alt="")
          .grid-container.margin-top.margin-top--md 
            - for (i = 0; i < 3; i++)
              +docs-card
    section.section.section--last.margin-top
      .container 
        .button-show-wrapper 
          .button-show 
            .button-show__text 
              |Показать еще
            .button-show__icon 
              +arrow-svg.button-show__svg
