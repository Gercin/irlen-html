extends ../layouts/master.pug

include ../components/navigation
include ../components/button
include ../components/tabs
include ../components/model-tabs


block content 
  .equip-page 
    section.section.section--first 
      .container 
        +navigation(items=['Оборудование', 'Токарные станки с ЧПУ'] page='Токарные станки с ЧПУ с направляющими качения ')
    section.section
      .container 
        .panel
          .panel__col
            .panel__container
              img(src="assets/images/equip-card-1.jpg", alt="")
          .panel__col
            .panel__text 
              |Токарные станки с ЧПУ на направляющих качения с максимальной частотой вращения шпинделя 6000 об/мин и возможностью установки фрезерного привода. Длинные заготовки возможно обрабатывать, используя заднюю бабку, поджимая автоматическим задним центром, также возможна обработка длинных валов, как в ручном, так и в автоматическом люнете.
          .panel__col  
            +button 
              |Материалы для скачивания
        .equip-page__wrapper.margin-top
          +tabs(tabs = ['Leadwell серия T', 'Leadwell серия LTC', 'Leadwell серия T/LTC'])
        .margin-top.margin-top--md 
          +model-tabs(items = ['Модели', 'Возможные опции'])
    section.section.section--white.section--table.margin-top.margin-top--md 
      table.equip-page__table.margin-top
        thead.equip-page__table-head 
          tr 
            each item in ['Модель', 'Макс. диаметр точения, мм', 'Макс. длина точения, мм', 'Диаметр патрона, мм', 'Макс. диаметр прутковой заготовки, мм', 'Харакатеристика шпинделя, кВт/об/мин']
              td.equip-page__table-cell.equip-page__table-title
                |#{item}
        tbody.equip-page__table-body  
          - for (i = 0; i < 13; i++)
            tr
              each item in ['T-5i', '300', '150', '150', '45', '7.5/6000']
                td.equip-page__table-cell 
                  |#{item}
      .container 
        .equip-page__inner
          +model-tabs(items = ['Модели', 'Возможные опции'])
      table.equip-page__table.margin-top.margin-top--md 
        thead.equip-page__table-head 
          tr 
            each item in ['Модель', 'Макс. диаметр точения, мм', 'Макс. длина точения, мм', 'Диаметр патрона, мм', 'Макс. диаметр прутковой заготовки, мм', 'Харакатеристика шпинделя, кВт/об/мин']
              td.equip-page__table-cell.equip-page__table-title
                |#{item}
        tbody.equip-page__table-body  
          - for (i = 0; i < 13; i++)
            tr
              each item in ['LTC-150', '300', '150', '150', '45', '7.5/6000']
                td.equip-page__table-cell 
                  |#{item}